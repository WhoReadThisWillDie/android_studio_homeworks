<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#C89DCF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:text="Квадратные уравнения" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Введите коэф-т a:" />

    <EditText
        android:id="@+id/edit_text_a"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Введи a"
        android:textSize="25sp"
        android:inputType="numberDecimal | numberSigned"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Введите коэф-т b:" />

    <EditText
        android:id="@+id/edit_text_b"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Введи b"
        android:textSize="25sp"
        android:inputType="numberSigned | numberDecimal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Введите коэф-т c:" />

    <EditText
        android:id="@+id/edit_text_c"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Введи c"
        android:textSize="25sp"
        android:inputType="numberSigned | numberDecimal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:text="Ответ:" />

    <TextView
        android:id="@+id/text_view_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Решить"
        android:onClick="click" />

</LinearLayout>